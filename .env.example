# API Configuration
API_PORT=80

# Mail Service Provider Selection
# Only one mail service should be enabled at a time
# Service priority: Noop → Mailjet → SendGrid
IS_SENDGRID_ENABLED=false
IS_MAILJET_ENABLED=false
IS_NOOP_ENABLED=false

# Default Email Settings
# These can be overridden per request
DEFAULT_FROM_ADDRESS=sender@example.com
DEFAULT_FROM_NAME=Mail Sender Name

# SendGrid Configuration
# Required if IS_SENDGRID_ENABLED=true
# SENDGRID_API_KEY=your_sendgrid_api_key_here

# Mailjet Configuration
# Required if IS_MAILJET_ENABLED=true
# MAILJET_API_KEY_PUBLIC=your_mailjet_public_key_here
# MAILJET_API_KEY_PRIVATE=your_mailjet_private_key_here
